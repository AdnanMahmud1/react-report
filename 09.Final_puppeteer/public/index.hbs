<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{{title}}</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div>
      <div class="row">
        <div class="col-md-12" style="border-bottom: #780e50 2px solid">
          <table class="table borderless">
            <tr>

              <td>
                <div align="right" style="padding-top: 10px;background: white">
                  <img
                    src="./images/logoBIRN.png"
                    style="height: 85px; width: 85px;"
                  />
                </div>
              </td>
              <td>
                <h5 style="padding-top: 10px; font-size: 30px;color: #780e29">
                  Bangladesh University of Engineering and Technology
                  <br />
                  <small style="font-size: 20px; color: #021f7c">
                    Research and Innovation Centre for Science and Engineering
                    (RISE)
                  </small>
                </h5>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-md-4">
          <div style="border-bottom: #780e50 2px solid">
            <div class="pull-right">
              <b style="padding-left: 20px;">Printed on {{currentDate}}</b>
              <span class="page"></span></div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <h1 class="text-center">
        {{title}}
      </h1>

      <hr />
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Designation</th>
            <th>Official_ID</th>
            <th>religion</th>
          </tr>
        </thead>
        <tbody>
          {{#each list as |user|}}
            <tr>
              <td>{{user.name}}</td>
              <td>{{user.designation_name}}</td>
              <td>{{user.official_ID}}</td>
              <td>{{user.religion}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/js/bootstrap.min.js"
    ></script>
  </body>
</html>